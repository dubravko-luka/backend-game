{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "ES2020",
        "outDir": "./build",
        "baseUrl": "./src",
        "strictNullChecks": true,
        "lib": [
            "ES2020"
        ],
        "typeRoots": [
            "./src/@types/",
            "./node_modules/@types/"
        ],
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
      ],
    "exclude": [
        "node_modules"
    ]
}